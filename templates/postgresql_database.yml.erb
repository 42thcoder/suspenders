development: &default
  adapter: postgresql
  database: <%= app_name %>_development
  encoding: utf8
  host: localhost
  min_messages: warning
  pool: <%%= ENV.fetch("DB_POOL", 2) %>
  reaping_frequency: <%%= ENV.fetch("DB_REAPING_FREQUENCY", 10) %>
  timeout: 5000

test:
  <<: *default
  database: <%= app_name %>_test

production:
  url:  <%%= ENV.fetch("DATABASE_URL", "") %>
  pool: <%%= ENV.fetch("DB_POOL", ENV.fetch("MAX_THREADS", 5) %>
